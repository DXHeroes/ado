{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessFragments": "error",
				"useFlatMap": "error",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"noNonNullAssertion": "warn",
				"useConst": "error",
				"useExportType": "error",
				"useImportType": "error",
				"useNodejsImportProtocol": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noConsole": "warn"
			}
		}
	},
	"overrides": [
		{
			"include": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "e2e/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"noConsole": "off",
						"noThenProperty": "off",
						"noArrayIndexKey": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"correctness": {
						"noUnusedVariables": "off"
					},
					"complexity": {
						"noForEach": "off"
					},
					"a11y": {
						"useButtonType": "off"
					}
				}
			}
		},
		{
			"include": [
				"packages/core/src/parallel/k8s-autoscaler.ts",
				"packages/core/src/parallel/merge-coordinator.ts",
				"packages/dashboard/**/*.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "off"
					},
					"suspicious": {
						"noArrayIndexKey": "off"
					},
					"a11y": {
						"useButtonType": "off"
					}
				}
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all",
			"arrowParentheses": "always"
		}
	},
	"files": {
		"ignore": ["node_modules", "dist", "coverage", "*.d.ts", ".ado", "coverage-output.json"]
	}
}
