{
	"name": "@dxheroes/ado-mcp-server",
	"version": "0.1.0",
	"description": "Model Context Protocol server for ADO",
	"private": true,
	"type": "module",
	"keywords": ["ado", "mcp", "model-context-protocol", "server"],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"bin": {
		"ado-mcp": "./dist/index.js"
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"start": "node dist/index.js",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@dxheroes/ado-core": "workspace:*",
		"@dxheroes/ado-shared": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.4.0"
	}
}
